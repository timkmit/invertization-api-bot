generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         Int      @id @unique @default(autoincrement())
  name       String
  count      Int
  price      Int
  color      String
  category   Category @relation(fields: [category_id], references: [id])
  visibility Boolean
  category_id Int
}

model Category {
  id      Int       @id @unique @default(autoincrement())
  name    String
  Product Product[]
}

